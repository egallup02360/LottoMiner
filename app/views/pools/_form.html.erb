

<%= simple_form_for Pool.new(url: @pool["URL"].gsub("stratum+tcp://", ""), user: @pool["User"]), url: { action: :update, controller: :pools }, method: :patch, wrapper: :input_group do |f| %>
  <%= f.input :url, prepend: "stratum+tcp://" %>
  <%= f.input :user %>
  <%= f.input :pass %>
  <%= f.button :submit, class: 'btn btn-secondary form-control' %>
<% end %>
